{% set logo_base_class = logo_base_class|default('logo') %}

{% set additional_attributes = {
  class: bem(logo_base_class, logo_modifiers, logo_blockname),
} %}

<div {{ add_attributes(additional_attributes) }}>
    <div class="logo__logo">
        {% include "modules/custom/esn_layouts/templates/images/icons/_icon.twig" with {
            icon_name: 'logo'
        } %}
    </div>
    <div class="logo__iso">
    {% include "modules/custom/esn_layouts/templates/images/icons/_icon.twig" with {
            icon_name: 'iso'
    } %}
    </div>
    <div class="logo__vertical">
    {% include "modules/custom/esn_layouts/templates/images/icons/_icon.twig" with {
            icon_name: 'logov'
    } %}
    </div>
    <div class="logo__50">
        {% include "modules/custom/esn_layouts/templates/images/icons/_icon.twig" with {
            icon_name: 'iso-50'
        } %}
    </div>
    <div class="logo__slogan">
        {% include "modules/custom/esn_layouts/templates/text/headings/_heading.twig" with {
            heading_level: 2,
            heading: logo_slogan,
            heading_modifiers: ['slogan']
        } %}
        {# <p>{{logo_slogan}}</p> #}
    </div>
</div>