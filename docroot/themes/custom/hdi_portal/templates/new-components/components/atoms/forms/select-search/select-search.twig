{% set search_form_base_class = search_form_base_class|default('search-form') %}

<div {{ bem(search_form_base_class, search_form_modifiers, search_form_blockname) }}>
    <div {{ bem('input', search_form_modifiers, search_form_base_class) }}>
        <input list="browsers" value="" id="searchInput" placeholder="Selecciona el tipo de busqueda">
            <datalist id="browsers">
                <option value="Buscar">
            </datalist>
