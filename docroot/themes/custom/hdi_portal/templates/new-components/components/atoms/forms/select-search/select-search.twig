                 icon_name: 'search',
                 icon_modifiers: ['secondary']
             } %}
        </div>
    </div>

    <div {{ bem('select', search_form_modifiers, search_form_base_class) }}>
        <div {{ bem('button', search_form_modifiers, search_form_base_class) }}>
            <label>Selecciona tu busqueda</label>
            <div {{ bem('icon', search_form_modifiers, search_form_base_class) }}>
                {% include "themes/custom/hdi_portal/templates/new-components/components/atoms/images/icons/_icon.twig" with {
                 icon_name: 'arrow-down',
                 icon_modifiers: ['white', 'arrow']
             } %}

                {% include "themes/custom/hdi_portal/templates/new-components/components/atoms/images/icons/_icon.twig" with {
                 icon_name: 'close',
