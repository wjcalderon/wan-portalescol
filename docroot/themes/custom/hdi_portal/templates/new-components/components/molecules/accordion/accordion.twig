{#
 # Available variables:
 # - accordion__base_class - base classname of the wrapper.
 # - accordion__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - accordion__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 #
 # - accordion__heading - the content of the title component.
 # - accordion__heading__link - (optional) the url the title should link to. Defaults to accordion__link__url.
 # - accordion__heading__base_class - base classname of the title component. Defaults to "title".
 # - accordion__heading__blockname - blockname to add to the base classname of the title - defaults to accordion__base_class.
 # - accordion__heading__modifiers - array of modifiers to add to the base classname of the title.
 # - accordion__heading__link_base_class - base class to add to the title link - defaults to 'title-link'.
 #
 # - accordion__items - the content of the items of accordion.
 #}
{% set accordion__base_class = 'accordion-container' %}

<div {{ bem(accordion__base_class, accordion__modifiers, accordion__blockname, accordion__extra_classes) }}>
  <section class="accordion__wrapper {{ attributes ? ' ' ~ attributes.class }}"
  {{- attributes ? attributes|without(class) -}}>
    {% block accordion_content %}
      {% for key, item in accordion__items %}
        {% include "themes/custom/liberty_public/templates/new-components/components/molecules/accordion/_accordion_item.twig" with {
          item_id: random(1, 100),
          item_heading: item.item_heading,
          item_body: item.item_body,
        } %}
      {% endfor %}
    {% endblock %}
  </section>
</div>
