{#
 # Available variables:
 # - hero__base_class - base classname of the wrapper.
 # - hero__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - hero__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 #
 # - hero__image__src - the actual image file location.
 # - hero__image__alt - (optional) the alt text for screen readers and when the image cannot load.
 # - hero__image__output_image_tag - whether to print the picture element or not.
 #
 # - hero__content__base_class - base classname of the copy wrapper - defaults to 'heading'.
 # - hero__content__modifiers - array of modifiers to add to the base classname of the copy wrapper.
 # - hero__content__blockname - blockname prepended to the base classname of the copy wrapper.
 #
 # - hero__heading - the content of the title component.
 # - hero__heading__link - (optional) the url the title should link to. Defaults to hero__link__url.
 # - hero__heading__base_class - base classname of the title component. Defaults to "title".
 # - hero__heading__blockname - blockname to add to the base classname of the title - defaults to hero__base_class.
 # - hero__heading__modifiers - array of modifiers to add to the base classname of the title.
 # - hero__heading__link_base_class - base class to add to the title link - defaults to 'title-link'.
 #
 # - hero__body - the content of the body component.
 # - hero__body__base_class - base classname of the body component. Defaults to "body".
 # - hero__body__modifiers - array of modifiers to add to the base classname of the body.
 #}
{% set hero__base_class = hero__base_class|default('hero-breaker') %}

{% if not hero__heading and not hero__body  %}
	{% set hero__content__modifiers = ['wihout-text'] %}
{% endif %}

<div {{ bem(hero__base_class, hero__modifiers, hero__blockname) }}>
    <div {{ bem('content', hero__content__modifiers, hero__base_class) }}>
      <div {{ bem('content-wrapper', hero__content__modifiers, hero__base_class) }}>
        {# Heading #}
        {% if hero__heading %}
        <div {{ bem('heading', [], hero__base_class) }}>
            {% include "themes/custom/hdi_portal/templates/new-components/components/atoms/text/headings/_heading.twig" with {
            heading_level: hero__heading_level|default(2),
            heading: hero__heading,
            heading_modifiers: hero__heading__modifiers
            } %}
        </div>
        {% endif %}

        {# Body #}
        {% if hero__body %}
        <div {{ bem('body', hero__body__modifiers, hero__base_class) }}>
            {% include "themes/custom/hdi_portal/templates/new-components/components/atoms/text/text/_text.twig" with {
            paragraph_content: hero__body,
            paragraph_modifiers: hero__body__modifiers
            } %}
        </div>
        {% endif %}

        {% if hero__button__url %}
        <div {{ bem('content-button', hero__body__modifiers, hero__base_class) }}>
        {% include "themes/custom/hdi_portal/templates/new-components/components/atoms/buttons/button_link.twig" with {
            button_base_class: hero__button__base_class|default('button'),
            button_modifiers: hero__button_modifiers,
            button_attributes: hero__button__attributes,
            button_content: hero__button__content,
            button_url: hero__button__url,
        } %}
        </div>

        {% endif %}
      </div>
  </div>
  <div {{ bem('image', hero__image__modifiers, hero__base_class) }}>

    <div {{ bem('image-desktop', hero__image__modifiers, hero__base_class) }}>
			{% block hero__image %}
				{% include "themes/custom/hdi_portal/templates/new-components/components/atoms/images/image/_image.twig" with {
					image_modifiers: hero__image__modifiers,
					image_src: hero__image,
				} %}
			{% endblock %}
		</div>

		<div {{ bem('image-mobile', hero__image__modifiers, hero__base_class) }}>
			{% block hero__image__mobile %}
				{% include "themes/custom/hdi_portal/templates/new-components/components/atoms/images/image/_image.twig" with {
					image_modifiers: hero__image__modifiers,
					image_src: hero__image__mobile,
				} %}
			{% endblock %}
		</div>
  </div>

</div>
