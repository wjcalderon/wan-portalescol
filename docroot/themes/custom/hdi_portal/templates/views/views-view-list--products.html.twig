{#
/**
 * @file
 * Theme override for a view template to display a list of rows.
 *
 * Available variables:
 * - attributes: HTML attributes for the container.
 * - rows: A list of rows for this list.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's contents.
 * - title: The title of this group of rows. May be empty.
 * - list: @todo.
 *   - type: Starting tag will be either a ul or ol.
 *   - attributes: HTML attributes for the list element.
 *
 * @see template_preprocess_views_view_list()
 */
#}

{%
    set classes_new = [
    'js-sliderrr',
    'js-slider-nondk'
]
%}

  {% if attributes -%}
    <div{{ attributes }}>
  {% endif %}
  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}
  <div class="cog--mq">
    <{{ list.type }}{{ list.attributes }} {{attributes.addClass(classes_new)}} data-slick='{"slidesToShow": 4, "slidesToScroll": 1, "responsive": [{"breakpoint": 978,"settings": {"slidesToShow": 3,"slidesToScroll": 1,"dots": false,"arrows": true}}]}'>
     
      {% for row in rows %}
        <li{{ row.attributes }}>{{ row.content }}</li>
      {% endfor %}

    </{{ list.type }}>
  </div>

  {{ drupal_view('products', 'block_2', 6) }}

{% if attributes -%}
  </div>
{% endif %}
