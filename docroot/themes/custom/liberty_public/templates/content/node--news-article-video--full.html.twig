{% set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
] %}

  {% if title_prefix or title_suffix or display_submitted or unpublished or page is empty and label %}
    {{ title_prefix }}
    {% if not page and label %}
    <h2{{ title_attributes }}>
      <a  href="{{ url }}">{{ label }}</a>
    </h2>
    {% endif %}
    {{ title_suffix }}
  {% endif %}

  <div class="content">
    <section class="component component__banner cp-banner">
      <div class="cp-banner__image">
        <div class="cp-banner__image-mobile">{{ content.field_small_image }}</div>
        <div class="cp-banner__image-desktop">{{ content.field_big_image }}</div>
      </div>

      <div class="cog--mq banner--container">
        <div class="col-md-6 cp-banner__heading">
          <div class="cp-banner__title">
            <h1 class="c__title">{{ node.label }}</h2>
          </div>
        </div>
      </div>
    </section>

    <div class="news-body container cog--mq">
      <div class="header-body">
        <div class="header-body__category">{{ content.field_category }}</div>
        {% if content.field_featured %}
          <div class="header-body__featured">{{ content.field_featured }}</div>
        {% endif %}
      </div>
      <div class="body"></div>
      {{ content.created }}
      {{ content.body }}
      {{ content.field_relacionados }}
      {{ content.field_cta }}
    </div>
  </div>

<!-- /content -->

  {% if content.links.terms %}
  <div class="terms">
    {{ content.links.terms }}
  </div>
<!-- /terms -->
  {% endif %}

  {% if content.links %}
  <div class="links">
    {{ content.links }}
  </div>
<!-- /links -->
  {% endif %}

  {{ content.comment }}

