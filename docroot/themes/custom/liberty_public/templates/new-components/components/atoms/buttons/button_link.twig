{#
/**
 * Available variables:
 * - button_content - the content of the button (typically text)
 *
 * Available blocks:
 * - button_content - used to replace the content of the button with something other than text
 *   for example: to insert an icon
 */
#}

{% set button_base_class = button_base_class|default('button') %}

{% set additional_attributes = {
  class: bem(button_base_class, button_modifiers, button_blockname),
} %}
{% if button_url %}
  <a
    href="{{ button_url }}" {{ add_attributes(additional_attributes) }}
    {% for attribute, value in button_attributes %}
      {% if value  %}
        {% if attribute == 'download' %}
          {{ attribute }}
        {% else %}
          {{ attribute }}="{{ value }}"
        {% endif %}
      {% endif %}
    {% endfor %}
    {% if button_url_ext %}
      rel="nofollow"
      target="_blank"
    {% endif %}
  >
      {{ button_content }}
  </a>
{% else %}

<button {{ add_attributes(additional_attributes) }}>
  {% block button_content %}
    {{ button_content }}
  {% endblock %}
</button>

{% if button_url %}
  </a>
{% endif %}
{% endif %}