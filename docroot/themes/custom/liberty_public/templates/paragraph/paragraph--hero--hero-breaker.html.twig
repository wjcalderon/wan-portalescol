{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   - id: The paragraph ID.
 *   - bundle: The type of the paragraph, for example, "image" or "text".
 *   - authorid: The user ID of the paragraph author.
 *   - createdtime: Formatted creation date. Preprocess functions can
 *     reformat it by calling format_date() with the desired parameters on
 *     $variables['paragraph']->getCreatedTime().
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{% set hero_style = content.field_hero_style[0]['#markup'] %}
{% set hero_button_style = content.field_p_cta_link[0]['#options']['attributes']['style']|clean_class %}
{% set hero_button_size = content.field_p_cta_link[0]['#options']['attributes']['size']|clean_class %}
{% set hero_button_modifiers = [
  hero_button_style,
  hero_button_size
] %}
{% set card_button_target = content.field_p_cta_link[0]['#options']['attributes']['target']|clean_class %}
{% set card__link__attributes = {
    target: card_button_target,
 } %}
{% set hero_modifiers = [] %}

{% set breaker_style = content.field_breaker_style[0]['#markup'] %}
{% set image_side = content.field_lib_image_side[0]['#markup'] %}

{% if breaker_style %}
  {% set hero_modifiers = hero_modifiers|merge([breaker_style]) %}
  {% if breaker_style != "50-50" %}
    {% set hero_modifiers = hero_modifiers|merge(['border']) %}
  {% endif %}
  {% if hero_style %}
    {% set hero_modifiers = hero_modifiers|merge([hero_style]) %}
  {% endif %}
{% endif %}

{% if image_side %}
  {% set hero_modifiers = hero_modifiers|merge([image_side]) %}
{% endif %}

{% embed "themes/custom/liberty_public/templates/new-components/components/molecules/hero/hero-breaker.twig" with {
  hero__modifiers: hero_modifiers,
  hero__heading: content.field_title_html|field_value,
  hero__body: content.field_body_card|field_value,
  hero__button__url: content.field_p_cta_link[0]['#url'],
  hero__button__content: content.field_p_cta_link[0]['#title'],
  hero__button_modifiers: hero_button_modifiers,
  hero__button__attributes: card__link__attributes,
} %}
{% block hero__image %}
  {{ content.field_media_mmedia|field_value }}
{% endblock %}
{% block hero__image__mobile %}
  {% if content.field_imagen_reponsive|field_value %}
    {{ content.field_imagen_reponsive|field_value }}
  {% else %}
    {{ content.field_media_mmedia|field_value }}
  {% endif %}
{% endblock %}
{% endembed %}